{% extends 'core.html.twig' %}

{% block content %}

    {% if errorMessage %}

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="alert alert-danger">
                        {{ errorMessage }}
                    </div>
                </div>
            </div>
        </div>

    {% else %}

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="movie">
                        {{ movieInfo }}
                        <img src="{{ Poster }}" alt="" class="movie__img">
                    </div>
                </div>

                <div class="col">
                    <div class="movie">
                        <p class="movie__title h2">{{ Title }}</p>

                        <p class="movie__rating">{{ Year }}</p>

                        <p> {{ Plot }}</p>
                        <form action="{{ root }}cruds/addToWatchlist.php" method="get">
                            <input type="hidden" name="imdbID" value="{{ imdbID }}">
                            <input type="submit" class="btn btn-primary" value="toevoegen aan 'Mijn Films'">
                        </form>
                    </div>
                </div>

            </div>
        </div>

    {% endif %}

{% endblock %}